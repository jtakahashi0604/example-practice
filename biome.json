{
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":PACKAGE:",
              ":BLANK_LINE:",
              "@/_lib/**",
              ":BLANK_LINE:",
              "@/_schemas/**",
              "@/_services/**",
              "@/_actions/**",
              ":BLANK_LINE:",
              "@/_components/ui/**",
              "@/_components/domain/**"
            ]
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "error"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!.next",
      "!node_modules",
      "!src/_components/ui",
      "!src/generated/prisma"
    ]
  }
}
